<div class="container px-5 px-sm-0">
  <div class="row">
    <div class='col-md-3'><%= render '/users/show', user: @user,book: @book %></div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
          <% @books.each do |book| %>
            <tr>
              <td><%= link_to attachment_image_tag(book.user, :profile_image, :fill, size:"60*60", format: 'jpeg', fallback: "no_image.jpg"),user_path(book.user.id) %></td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </table>
    </div>
  </div>
</div>
