<% if flash[:success] %>
  <div class="flash">
    <%= flash[:success] %>
    <%= favicon_link_tag('favicon.ico') %>
  </div>
<% end %>
<div class="container">
<div class="row">
<div class="col-md-3"><%= render '/users/show', user: @user,book: @book %></div>
<div class="col-md-8 offset-md-1">
  <h2>Users</h2>
  <table class="table table-hover table-inverse">
    <thead>
      <th>image</th>
      <th>name</th>
    </thead>
    <% @users.each do |f| %>
    <tr>
      <td><%= attachment_image_tag f, :profile_image, :fill, size:'60x60', format: 'jpeg', fallback: "no_image.jpg" %></td>
      <td><%= f.name %></td>
      <td><%=link_to "Show", user_path(f.id) %></td>
      <% end %>
    </tr>
  </div>
  <table class="table table-striped">
</table>
</div>
</div>