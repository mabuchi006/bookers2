<%= flash[:notice] %>
<% if flash[:success] %>
<div class="flash">
  <%= flash[:success] %>
</div>
<% end %>
<div class="container">
<div class="row">
<div class="col-md-3"><%= render '/users/show', user: @user,book: @book %></div>
<div class="col-md-8 offset-md-1">
  <h2>Books</h2>
  <table class="table table-hover table-invers">
    <thead>
      <th></th>
      <th>title</th>
      <th>body</th>
    </thead>
    <% @books.each do |f| %>
    <tr>
      <td>
        <%= link_to attachment_image_tag(f.user, :profile_image, :fill, size:'100x100', format: 'jpeg', fallback: "no_image.jpg"),user_path(f.user.id) %>
      </td>
      <td><%= link_to f.title, book_path(f.id) %></td>
      <td><%= f.body %></td>
      <% end %>
    </tr>
  </table>

</div>
</div>
</div>